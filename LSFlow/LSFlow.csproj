<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <PackageId>LSFlow</PackageId>
        <Version>1.0.0</Version>
        <Authors>Eduardo Lozano</Authors>
        <Description>A .NET library for implementing reliable messaging using the Outbox Pattern</Description>
        <PackageTags>messaging;outbox;rabbitmq</PackageTags>
        <RepositoryUrl>https://github.com/eduardolozi/LSFlow</RepositoryUrl>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.EntityFrameworkCore" Version="8.0.0" />
      <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" Version="8.0.0" />
      <PackageReference Include="RabbitMQ.Client" Version="7.1.2" />
    </ItemGroup>

</Project>
